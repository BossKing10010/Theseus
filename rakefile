task :default => :test

task :test do
  sh 'xcodebuild clean test -workspace OpenData.xcworkspace -scheme OpenData -sdk iphonesimulator ONLY_ACTIVE_ARCHS=NO | xcpretty -tc'
end

task :travis do
  sh 'xcodebuild clean test -workspace OpenData.xcworkspace -scheme OpenData -sdk iphonesimulator | xcpretty -tc && exit ${PIPESTATUS[0]}'
end
